<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', serif;
            line-height: 1.6;
            background-color: #ffffff;
            color: #000000;
        }

        /* A4 Size Container */
        .resume {
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20mm;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #000000;
            padding-bottom: 10px;
        }

        .header h1 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .header p {
            font-size: 14px;
            color: #555;
        }

        /* Section Styling */
        .section {
            margin-bottom: 20px;
        }

        .section h2 {
            font-size: 20px;
            font-weight: bold;
            border-bottom: 1px solid #000000;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }

        .section ul {
            list-style-type: none;
            padding-left: 0;
        }

        .section ul li {
            margin-bottom: 10px;
        }

        .section ul li strong {
            font-weight: bold;
        }

        /* Professional Experience */
        .experience-item {
            margin-bottom: 15px;
        }

        .experience-item h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .experience-item p {
            font-size: 14px;
            color: #555;
            margin-bottom: 5px;
        }

        .experience-item ul {
            margin-left: 20px;
        }

        .experience-item ul li {
            list-style-type: disc;
            margin-bottom: 5px;
        }

        /* Education */
        .education-item {
            margin-bottom: 15px;
        }

        .education-item h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .education-item p {
            font-size: 14px;
            color: #555;
        }

        /* Skills and Certifications */
        .skills-list, .certifications-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .skills-list li, .certifications-list li {
            background-color: #f0f0f0;
            padding: 5px 10px;
            border-radius: 3px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="resume">
        <!-- Header -->
        <div class="header">
            <h1><%= user.personalDetails.name %></h1>
            <p><%= user.personalDetails.email %> | <%= user.personalDetails.phone %> | <%= user.personalDetails.address %></p>
        </div>

        <!-- Skills -->
        <div class="section">
            <h2>Skills</h2>
            <ul class="skills-list">
                <% user.skills.skills.forEach(skill => { %>
                    <li><%= skill %></li>
                <% }) %>
            </ul>
        </div>

        <!-- Certifications -->
        <div class="section">
            <h2>Certifications</h2>
            <ul class="certifications-list">
                <% user.skills.certifications.forEach(cert => { %>
                    <li><%= cert %></li>
                <% }) %>
            </ul>
        </div>

        <!-- Professional Experience -->
        <div class="section">
            <h2>Professional Experience</h2>
            <% user.professionalExperience.forEach(exp => { %>
                <div class="experience-item">
                    <h3><%= exp.occupation %> - <%= exp.company %></h3>
                    <p><%= new Date(exp.doj).toLocaleDateString() %> - <%= new Date(exp.dor).toLocaleDateString() %></p>
                    <ul>
                        <% exp.projects.forEach(proj => { %>
                            <li><strong><%= proj.name %>:</strong> <%= proj.description %></li>
                        <% }) %>
                    </ul>
                </div>
            <% }) %>
        </div>

        <!-- Education -->
        <div class="section">
            <h2>Education</h2>
            <% user.education.forEach(edu => { %>
                <div class="education-item">
                    <h3><%= edu.institute %></h3>
                    <p><%= edu.degree %> in <%= edu.fieldOfStudy %> | CGPA: <%= edu.cgpa %></p>
                    <p><%= new Date(edu.startDate).toLocaleDateString() %> - <%= new Date(edu.endDate).toLocaleDateString() %></p>
                </div>
            <% }) %>
        </div>

        <!-- Achievements -->
        <div class="section">
            <h2>Achievements</h2>
            <p><%= user.skills.achievements %></p>
        </div>
    </div>
</body>
</html>