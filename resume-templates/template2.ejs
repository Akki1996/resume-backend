<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <style>
       
        body { font-family: Arial, sans-serif; background-color: #f9f9f9; color: #333; margin: 0; padding: 0; }
        .resume { width: 100%; height: 100%; background: white; padding: 20px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); }
        h1, h2 { color: #2c3e50; }
        ul { list-style: none; padding: 0; }
        .section { margin-bottom: 20px; }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid #000000;
            padding-bottom: 0.5rem;
        }

        .header h1 {
            font-size: 2rem; /* Use relative units */
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .header p {
            font-size: 1rem; /* Use relative units */
            color: #555;
        }


        .section h2 {
            font-size: 1.5rem; /* Use relative units */
            font-weight: bold;
            border-bottom: 1px solid #000000;
            padding-bottom: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .section ul {
            list-style-type: none;
            padding-left: 0;
        }

        .section ul li {
            margin-bottom: 0.5rem;
        }

        .section ul li strong {
            font-weight: bold;
        }

        /* Professional Experience */
        .experience-item {
            margin-bottom: 1rem;
        }

        .experience-item h3 {
            font-size: 1.25rem; /* Use relative units */
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .experience-item p {
            font-size: 1rem; /* Use relative units */
            color: #555;
            margin-bottom: 0.5rem;
        }

        .experience-item ul {
            margin-left: 1.5rem;
        }

        .experience-item ul li {
            list-style-type: disc;
            margin-bottom: 0.5rem;
        }

        /* Education */
        .education-item {
            margin-bottom: 1rem;
        }

        .education-item h3 {
            font-size: 1.25rem; /* Use relative units */
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .education-item p {
            font-size: 1rem; /* Use relative units */
            color: #555;
        }

        /* Skills and Certifications */
        .skills-list, .certifications-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .skills-list li, .certifications-list li {
            background-color: #f0f0f0;
            padding: 0.5rem 1rem;
            border-radius: 3px;
            font-size: 1rem; /* Use relative units */
        }
    </style>
</head>
<body>
    <div class="resume">
        <!-- Header -->
        <div class="header">
            <h1><%= user.personalDetails.name %></h1>
            <p><%= user.personalDetails.email %> | <%= user.personalDetails.phone %> | <%= user.personalDetails.address %></p>
        </div>

        <!-- Skills -->
        <div class="section">
            <h2>Skills</h2>
            <ul class="skills-list">
                <% user.skills.skills.forEach(skill => { %>
                    <li><%= skill %></li>
                <% }) %>
            </ul>
        </div>

        <!-- Certifications -->
        <div class="section">
            <h2>Certifications</h2>
            <ul class="certifications-list">
                <% user.skills.certifications.forEach(cert => { %>
                    <li><%= cert %></li>
                <% }) %>
            </ul>
        </div>

        <!-- Professional Experience -->
        <div class="section">
            <h2>Professional Experience</h2>
            <% user.professionalExperience.forEach(exp => { %>
                <div class="experience-item">
                    <h3><%= exp.occupation %> - <%= exp.company %></h3>
                    <p><%= new Date(exp.doj).toLocaleDateString() %> - <%= new Date(exp.dor).toLocaleDateString() %></p>
                    <ul>
                        <% exp.projects.forEach(proj => { %>
                            <li><strong><%= proj.name %>:</strong> <%= proj.description %></li>
                        <% }) %>
                    </ul>
                </div>
            <% }) %>
        </div>

        <!-- Education -->
        <div class="section">
            <h2>Education</h2>
            <% user.education.forEach(edu => { %>
                <div class="education-item">
                    <h3><%= edu.institute %></h3>
                    <p><%= edu.degree %> in <%= edu.fieldOfStudy %> | CGPA: <%= edu.cgpa %></p>
                    <p><%= new Date(edu.startDate).toLocaleDateString() %> - <%= new Date(edu.endDate).toLocaleDateString() %></p>
                </div>
            <% }) %>
        </div>

        <!-- Achievements -->
        <div class="section">
            <h2>Achievements</h2>
            <p><%= user.skills.achievements %></p>
        </div>
    </div>
</body>
</html>