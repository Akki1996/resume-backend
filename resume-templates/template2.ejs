<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .resume {
            width: 210mm;
            height: 297mm;
            background: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }
        h1, h2 { color: #2c3e50; }
        ul { list-style: none; padding: 0; }
        .section { margin-bottom: 20px; }
        hr { border: 1px solid #000; margin: 10px 0; }

        .header {
            text-align: center;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
        }

        .header h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .header p {
            font-size: 1rem;
            color: #555;
        }

        .skills-list, .certifications-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .skills-list li, .certifications-list li {
            background-color: #f0f0f0;
            padding: 0.5rem 1rem;
            border-radius: 3px;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="resume">
        <div class="header">
            <h1><%= user.personalDetails.name %></h1>
            <p><%= user.personalDetails.email %> | <%= user.personalDetails.phone %> | <%= user.personalDetails.address %></p>
        </div>
        <hr>
        <div class="section">
            <h2>Skills</h2>
            <ul class="skills-list">
                <% user.skills.skills.forEach(skill => { %>
                    <li><%= skill %></li>
                <% }) %>
            </ul>
        </div>
        <hr>
        <div class="section">
            <h2>Certifications</h2>
            <ul class="certifications-list">
                <% user.skills.certifications.forEach(cert => { %>
                    <li><%= cert %></li>
                <% }) %>
            </ul>
        </div>
        <hr>
        <div class="section">
            <h2>Professional Experience</h2>
            <% user.professionalExperience.forEach(exp => { %>
                <p><strong><%= exp.company %> - <%= exp.occupation %></strong></p>
                <p><%= new Date(exp.doj).toLocaleDateString() %> - <%= new Date(exp.dor).toLocaleDateString() %></p>
                <% exp.projects.forEach(proj => { %>
                    <p><strong><%= proj.name %>:</strong> <%= proj.description %></p>
                <% }) %>
            <% }) %>
        </div>
        <hr>
        <div class="section">
            <h2>Education</h2>
            <% user.education.forEach(edu => { %>
                <p><strong><%= edu.institute %></strong></p>
                <p><%= edu.degree %> in <%= edu.fieldOfStudy %> | CGPA: <%= edu.cgpa %></p>
                <p><%= new Date(edu.startDate).toLocaleDateString() %> - <%= new Date(edu.endDate).toLocaleDateString() %></p>
            <% }) %>
        </div>
        <hr>
        <div class="section">
            <h2>Achievements</h2>
            <p><%= user.skills.achievements %></p>
        </div>
    </div>
</body>
</html>