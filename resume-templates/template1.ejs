<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <style>
        /* General Styles */
        body { 
            font-family: Arial, sans-serif; 
            background-color: #f9f9f9; 
            color: #333; 
            margin: 0; 
            padding: 0; 
            line-height: 1.6; 
        }
        .resume { 
            width: 100%; 
            height: 100%; 
            background: white; 
            padding: 20px; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        }

        /* Typography */
        h1 { 
            font-size: 2.5rem; 
            color: #2c3e50; 
            margin-bottom: 0.5rem; 
        }
        h2 { 
            font-size: 2rem; 
            color: #2c3e50; 
            margin-bottom: 0.75rem; 
            border-bottom: 2px solid #2c3e50; 
            padding-bottom: 0.25rem; 
        }
        h3 { 
            font-size: 1.5rem; 
            color: #2c3e50; 
            margin: 1rem 0 0.5rem 0; 
        }
        p { 
            font-size: 1rem; 
            color: #555; 
            margin: 0.5rem 0; 
        }
        ul { 
            list-style: none; 
            padding: 0; 
        }
        li { 
            font-size: 1rem; 
            color: #555; 
            margin: 0.5rem 0; 
        }

        /* Section Styles */
        .section { 
            margin-bottom: 1.5rem; 
        }
        .education, .skills, .certifications, .professional-experience, .achievements { 
            margin-bottom: 1.5rem; 
        }
    </style>
</head>
<body>
    <div class="resume">
        <h1><%= user.personalDetails.name %></h1>
        <p>Email: <%= user.personalDetails.email %></p>
        <p>Phone: <%= user.personalDetails.phone %></p>
        <p>Address: <%= user.personalDetails.address %></p>

        <div class="section skills">
            <h2>Skills</h2>
            <ul>
                <% user.skills.skills.forEach(skill => { %>
                    <li><%= skill %></li>
                <% }) %>
            </ul>
        </div>

        <div class="section certifications">
            <h2>Certifications</h2>
            <ul>
                <% user.skills.certifications.forEach(cert => { %>
                    <li><%= cert %></li>
                <% }) %>
            </ul>
        </div>

        <div class="section professional-experience">
            <h2>Professional Experience</h2>
            <% user.professionalExperience.forEach(exp => { %>
                <h3><%= exp.company %> - <%= exp.occupation %></h3>
                <p><strong>Duration:</strong> <%= new Date(exp.doj).toLocaleDateString() %> - <%= new Date(exp.dor).toLocaleDateString() %></p>
                <% exp.projects.forEach(proj => { %>
                    <p><strong><%= proj.name %>:</strong> <%= proj.description %></p>
                <% }) %>
            <% }) %>
        </div>

        <div class="section education">
            <h2>Education</h2>
            <% user.education.forEach(edu => { %>
                <p><strong><%= edu.institute %></strong> - <%= edu.degree %> in <%= edu.fieldOfStudy %> (CGPA: <%= edu.cgpa %>)</p>
                <p><strong>Duration:</strong> <%= new Date(edu.startDate).toLocaleDateString() %> - <%= new Date(edu.endDate).toLocaleDateString() %></p>
            <% }) %>
        </div>

        <div class="section achievements">
            <h2>Achievements</h2>
            <p><%= user.skills.achievements %></p>
        </div>
    </div>
</body>
</html>